<div class="articles">
  <div class="display-4 mb-2"> Articles </div>
  <div> Our block has <%= Article.public_count %> articles and counting! </div>
  <ul class="list-group">
  <% @articles.each do | article | %>
    <% unless article.private? %>
      <li class="list-group-item">
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
  </ul>
</div>
